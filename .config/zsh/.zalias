# navigating diretories
alias apps="cd /Applications"
alias dls="cd ~/Downloads"
alias docs="cd ~/Documents"
alias dsk="cd ~/Desktop"
alias home="cd $HOME"
alias mus="cd ~/Music"
alias mvs="cd ~/Movies"
alias pics="cd ~/Pictures"
alias trash="cd ~/.Trash"
alias text="docs; cd text"
alias ctfs="docs; cd ctfs"
alias pdfs="docs; cd pdfs"
alias ora="docs; cd oracion"

# school subjects
alias school="docs; cd school"
alias nts="school; cd network"
alias mob="school; cd mobile"
alias cry="school; cd crypto"
alias cmi="school; cd cmitp"
alias journal="school; cd network/journal"
alias png="n=0; for i in *.png; do mv \"$i\" \"$n.png\"; ((n++)); done"
alias math="school; cd math"
alias mern="school; cd mern/proshop"

# editing zsh dotfilfes
alias za="vim ~/.config/zsh/.zalias"
alias ze="vim ~/.zshenv"
alias zf="vim ~/.config/zsh/.zfuncs"
alias zr="vim ~/.config/zsh/.zshrc"

# sourcing zsh dotfiles
alias reza="source ~/.config/zsh/.zalias"
alias reze="source ~/.zshenv"
alias rezr="source ~/.config/zsh/.zshrc"

# list shortcuts
alias l="ls --color=auto"
alias ls="ls --color=auto"
alias ll="ls -l"
alias la="ls -al"
alias lh="ls -lh"

# application settings
alias {v,vi}='vim'
alias vimrc="vim $HOME/.config/vim/vimrc"
alias cvimrc="vim $HOME/.config/cvim/cvimrc"
alias chrome='open -a "Google Chrome.app"'
alias dot="git --git-dir=$HOME/.config/.dotrepo --work-tree=$HOME"
alias getbib="zsh ~/.local/bin/getbib"
alias q="exit"
alias wget="wget --hsts-file=~/.config/wget/.wget-hsts"
alias {o,op,ope,opne,onep,oenp,oepn}='open'
alias jrnl="$HOME/Documents/jrnl/jrnl.sh"
