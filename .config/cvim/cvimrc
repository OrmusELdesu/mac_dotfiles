let homedirectory = '/Users/ormus'
let configpath = '~/.config/cvim/cvimrc'
set localconfig
set noautofocus
set smoothscroll
set ignorecase

let scrollstep = '40'
let hintcharacters = 'qwertasdgzcv'

let mapleader = ","
map <leader>n clearSearchHighlight

map ; :
" tab navigation
unmap gq
unmap gt

map gq closeTabsToLeft
map gt closeTabsToRight
map gw closeTabLeft
map ga closeTabRight
map zf yankUrl
map zF multiYankUrl

site '*://*.youtube.com/*' {
   unmap f
   unmap j
   unmap k
   unmap l
   unmap c
}

